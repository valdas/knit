#!/bin/sh

for file in code/*.ida
do
language=$(head -1 $file)
echo $language
language=$(head -1 $file)|sed 's/\(.*\.\)\r/\1/'
echo $language
cp $file srcFile
php 2src.php &>/dev/null
mkdir source/$language/`basename $file .ida`
echo "made the directory"
cp rmv source/$language/`basename $file .ida`/`basename $file ida`$language
done
